<?xml version="1.0"?>

<PropertyList>

    <path>ebbr_apron_9_light.ac</path>

    <animation>
        <type>range</type>
        <object-name>LightCone</object-name>
        <min-m>0</min-m>
        <max-m>3500</max-m>
    </animation>

    <animation>
        <type>range</type>
        <object-name>Pilar</object-name>
        <min-m>0</min-m>
        <max-m>4000</max-m>
    </animation>

  <!--  night emission  -->
  <animation>
    <type>material</type>
    <object-name>Pilar</object-name>
    <condition>		
      <greater-than>		
	<property>/sim/time/sun-angle-rad</property>
	<value>1.57</value>
      </greater-than>
    </condition>
    <emission>	
      <red>0.5</red>	
      <green>0.5</green>	
      <blue>0.5</blue>
    </emission>
  </animation>

</PropertyList>
