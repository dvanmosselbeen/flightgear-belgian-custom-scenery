<?xml version="1.0"?>

<PropertyList>
    <path>ebav_mast_tower.ac</path>

	<!--  night emission  -->
	<animation>
		<type>material</type>
		<object-name>Mast</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.49</value>
			</greater-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
		</emission>
	</animation>

    <model>
        <path>Models/Effects/flashlight_white10000.xml</path> 
        <offsets> 
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>64</z-m>
            <heading-deg>0</heading-deg>
        </offsets>
    </model>

    <model>
        <path>Models/Effects/RedLight10000.xml</path> 
        <offsets> 
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>65</z-m>
            <heading-deg>0</heading-deg>
        </offsets>
    </model>

</PropertyList>

