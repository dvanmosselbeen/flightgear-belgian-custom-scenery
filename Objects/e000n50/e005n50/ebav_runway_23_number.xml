<?xml version="1.0"?>

<PropertyList>
  <path>ebav_runway_23_number.ac</path>

	<!--  night emission  -->
	<animation>
		<type>material</type>
		<object-name>Plane</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.49</value>
			</greater-than>
		</condition>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</emission>
	</animation>

  <animation>
    <object-name>Plane</object-name>
    <enable-hot type="bool">false</enable-hot>
  </animation>

</PropertyList>
