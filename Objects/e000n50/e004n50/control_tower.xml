	<animation>
		<type>material</type>
		<object-name>ControllerBase</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.57</value>
			</greater-than>
		</condition>
		<texture>control_tower-base_lightmap.png</texture>
		<emission>
			<red>	0.98</red>
			<green>	0.96</green>
			<blue>	0.78</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>ControlTower</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.57</value>
			</greater-than>
		</condition>
		<texture>control_tower-tower_lightmap.png</texture>
		<emission>
			<red>	0.98</red>
			<green>	0.96</green>
			<blue>	0.78</blue>
		</emission>
	</animation>

</PropertyList>
