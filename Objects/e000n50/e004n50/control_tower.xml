<?xml version="1.0"?>

<PropertyList>

    <path>control_tower.ac</path>

    <animation>
        <type>range</type>
        <object-name>Rail</object-name>
        <min-m>0</min-m>
        <max-m>700</max-m>
    </animation>

    <animation>
        <type>range</type>
        <object-name>RescueStair</object-name>
        <min-m>0</min-m>
        <max-m>1500</max-m>
    </animation>

     <animation>
        <type>rotate</type>
        <object-name>Radar</object-name>
        <property>/sim/time/elapsed-sec</property>
        <factor>-90.0</factor>
        <center>
            <x-m>2.23</x-m>
            <y-m>0.34</y-m>
            <z-m>69.07</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

