<?xml version="1.0"?>

<PropertyList>
    <path>ebgb_apron_light.ac</path>

    <animation>
        <type>range</type>
        <object-name>LightGlass</object-name>
        <object-name>LightBulb</object-name>
        <min-m>0</min-m>
        <max-m>700</max-m>
    </animation>

    <animation>
        <type>range</type>
        <object-name>LightCone</object-name>
        <min-m>0</min-m>
        <max-m>3500</max-m>
    </animation>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>7000</max-m>
    </animation>

    <animation>
        <object-name>LightCone</object-name>
        <type>select</type>
        <condition>
            <greater-than>
                <property>/sim/time/sun-angle-rad</property>
                <value>1.57</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>LightPillar</object-name>
        <condition>
            <greater-than>
                <property>/sim/time/sun-angle-rad</property>
                <value>1.57</value>
            </greater-than>
        </condition>
        <texture>ebgb_apron_light_night.png</texture>
        <emission>
            <red>	0.98</red>
            <green>	0.96</green>
            <blue>	0.78</blue>
        </emission>
    </animation>

    <animation>
        <object-name>LightCone</object-name>
        <enable-hot type="bool">false</enable-hot>
    </animation>

</PropertyList>
