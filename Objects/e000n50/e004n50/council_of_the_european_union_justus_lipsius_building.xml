<?xml version="1.0"?>

<PropertyList>
    <path>council_of_the_european_union_justus_lipsius_building.ac</path>

    <!-- This helipad got the icao code EBEU -->

    <animation>
        <type>range</type>
        <object-name>Spots</object-name>
        <min-m>0</min-m>
        <max-m>700</max-m>
    </animation>
    
    <animation>
        <type>range</type>
        <object-name>SolarPanelsStuts</object-name>
        <object-name>Mast</object-name>
        <min-m>0</min-m>
        <max-m>1000</max-m>
    </animation>

    <animation>
        <type>range</type>
        <object-name>LightCones</object-name>
        <min-m>0</min-m>
        <max-m>3500</max-m>
    </animation>
    
    <animation>
        <object-name>LightCones</object-name>
        <type>select</type>
        <condition>
            <greater-than>
                <property>/sim/time/sun-angle-rad</property>
                <value>1.57</value>
            </greater-than>
        </condition>
    </animation>
    
    <animation>
        <object-name>LightCones</object-name>
        <enable-hot type="bool">false</enable-hot>
    </animation>

</PropertyList>
