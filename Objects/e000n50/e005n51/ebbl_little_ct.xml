<?xml version="1.0"?>

<PropertyList>
    <path>ebbl_little_ct.ac</path>

	<!--  night emission  -->
	<animation>
		<type>material</type>
		<object-name>LittleCT</object-name>
		<object-name>Circle</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.49</value>
			</greater-than>
		</condition>
		<emission>
			<red>0.1</red>
			<green>0.1</green>
			<blue>0.1</blue>
		</emission>
	</animation>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>10000</max-m>
    </animation>

    <model>
        <path>Models/Effects/flashlight_white10000.xml</path> 
        <offsets> 
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>13.0111</z-m>
            <heading-deg>0</heading-deg>
        </offsets>
    </model>

    <model>
        <path>Models/Effects/RedLight10000.xml</path> 
        <offsets> 
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>13.0111</z-m>
            <heading-deg>0</heading-deg>
        </offsets>
    </model>

</PropertyList>

